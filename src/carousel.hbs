<section aria-label="Hero images carousel" class="">
  <div class="splide z-0">
    <div class="splide__track relative">
      <ul class="splide__list">
        {{#each htmlWebpackPlugin.options.images }}
          <li class="splide__slide">
            <img src="{{this}}" class="h-screen sm:h-fixed object-cover w-full object-center" />
          </li>
        {{/each}}
      </ul>
      <div class="absolute top-0 bottom-0 left-0 right-0 gradient"></div>
    </div>
  </div>
  <div class="flex justify-center h-1 font-body text-white/50 pt-4 pl2 items-center">
    <div class="flex space-x-2 justify-center pr-4 lg:pr-0">
      {{#each htmlWebpackPlugin.options.images}}
        <div class="pip rounded-full w-3 h-3 transition-opacity duration-100 bg-white/30"></div>
      {{/each}}
    </div>
  </div>
</section>
